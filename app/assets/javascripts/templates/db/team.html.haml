%h2 {{name}}

%h3 Current Players

%table.current
  %thead
    %th
      %a.name.asc.sorting Name
    %th
      %a.number.asc Number
    %th Date Joined
    %th Active
    %th Member Name
  %tbody
    {{#players}}
    {{#current}}
    %tr
      %td {{name}}
      %td {{number}}
      %td {{started}}
      %td {{active}}
      %td.link{data: {id: '{{member_id}}'}} {{member_name}}
    {{/current}}
    {{/players}}

%h3 Previous Players

%table.previous
  %thead
    %th
      %a.name.asc.sorting Name
      %span.glyphicon.glyphicon-chevron-down
    %th
      %a.number.asc Number
    %th Date Joined
    %th Date Left
    %th Member Name
  %tbody
    {{#players}}
    {{#previous}}
    %tr
      %td {{name}}
      %td {{number}}
      %td {{started}}
      %td {{ended}}
      %td.link{data: {id: '{{member_id}}'}} {{member_name}}
    {{/previous}}
    {{/players}}
